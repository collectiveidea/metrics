<div class="metric-list">
  <table class="metric-table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @metrics.each do |metric| %>
        <tr class="metric-row">
          <td class="metric-row-name"><%= metric.name %></td>
          <td class="metric-row-actions">
            <%= link_to "View", metric %>
            <%= link_to "Edit", edit_metric_path(metric) %>
            <%= link_to "Remove", metric, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
