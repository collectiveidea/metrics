source "https://rubygems.org"

# Ruby
ruby "2.2.2"

# Rails
gem "rails", "4.2.3"

# Database
gem "pg"

# Server
gem "puma"

# Assets
gem "bootstrap-sass"
gem "coffee-rails"
gem "font-awesome-rails"
gem "jquery-rails"
gem "sass-rails"
gem "uglifier"

# Runtime
gem "figaro"

group :production do
  gem "rails_12factor"
end

group :development, :test do
  gem "accept_values_for"
  gem "capybara"
  gem "database_cleaner"
  gem "domino"
  gem "factory_girl_rails"
  gem "pry-rails"
  gem "rspec-rails"
end
